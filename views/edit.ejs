<!DOCTYPE html>
<html>
  <head>
    <title>Edit Expense</title>
  </head>
  <body>
    <h1>Edit Expense</h1>
    <form action="/expenses/<%= expense._id %>?_method=PUT" method="POST">
      <label for="name">Name:</label>
      <input type="text" name="name" id="name" value="<%= expense.name %>" required>
      <br>
      <label for="amount">Amount:</label>
      <input type="number" name="amount" id="amount" value="<%= expense.amount %>" required>
      <br>
      <label for="date">Date:</label>
      <input type="date" name="date" id="date" value="<%= expense.date.toISOString().substring(0, 10) %>" required>
      <br>
      <label for="category">Category:</label>
      <input type="text" name="category" id="category" value="<%= expense.category %>" required>
      <br>
      <button type="submit">Update</button>
      <a href="/">Cancel</a>
    </form>
  </body>
</html>
